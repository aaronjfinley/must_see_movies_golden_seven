<h1>List of Directors</h1>

<a href="http://localhost:3000/directors/new">Add a New Director</a>

<table>
  <tr>
    <th>Name</th>
    <th>Date of Birth</th>
    <th>Image</th>
    <th>Actions</th>
  </tr>
  <% @directors.each do |director| %>
  <tr>
    <td>
      <a href="http://localhost:3000/directors/<%= director.id %>"><%= director.name %></a>
    </td>
    <td>
      <%= director.dob %>
    </td>
    <td>
      <img src="<%= director.image_url %>">
    </td>
    <td>
      <a href="http://localhost:3000/directors">Back</a>
      <a href="http://localhost:3000/directors/<%= director.id %>/edit">Edit</a>
      <a href="http://localhost:3000/delete_director/<%= director.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
