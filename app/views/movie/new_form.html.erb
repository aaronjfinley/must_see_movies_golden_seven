<h1>Add A New Movie</h1>

<form action="http://localhost:3000/create_movie">
  <div>
    <label for="title">Title:</label>
    <input id="title" type="text" name="title">
  </div>
  <div>
    <label for="year">Year:</label>
    <input id="year" type="text" name="year">
  </div>
  <div>
    <label for="duration">Duration:</label>
    <input id="duration" type="text" name="duration">
  </div>
  <div>
    <label for="image_url">Image:</label>
    <input id="image_url" type="text" name="image_url">
  </div>
  <div>
    <label for="description">Description:</label>
    <textarea id="description" type="textarea" name="description" class="form-control">Movie Description</textarea>
  </div>
  <div>
    <button>Create Movie</button>
  </div>
</form>
