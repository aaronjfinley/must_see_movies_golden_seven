<h1>List of Actors</h1>

<a href="http://localhost:3000/actors/new">Add a New Actor</a>

<table>
  <tr>
    <th>Name</th>
    <th>Date of Birth</th>
    <th>Image</th>
    <th>Actions</th>
  </tr>
  <% @actors.each do |actor| %>
  <tr>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>"><%= actor.name %></a>
    </td>
    <td>
      <%= actor.dob %>
    </td>
    <td>
      <img src="<%= actor.image_url %>">
    </td>
    <td>
      <a href="http://localhost:3000/actors">Back</a>
      <a href="http://localhost:3000/actors/<%= actor.id %>/edit">Edit</a>
      <a href="http://localhost:3000/delete_actor/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
