<h1>Edit <%= @actor.name %></h1>

<form action="http://localhost:3000/update_actor/<%= @actor.id %>">
  <div>
    <label for="name">Name:</label>
    <input id="name" type="text" name="name" value="<%= @actor.name %>">
  </div>
  <div>
    <label for="dob">DOB:</label>
    <input id="dob" type="text" name="dob" value="<%= @actor.dob %>">
  </div>
  <div>
    <label for="image_url">Image:</label>
    <input id="image_url" type="text" name="image_url" value="<%= @actor.image_url %>">
  </div>
  <div>
    <label for="bio">Bio:</label>
    <textarea id="bio" type="textarea" name="bio" class="form-control"><%= @actor.bio %></textarea>
  </div>
  <div>
    <button>Update Actor</button>
  </div>
</form>
